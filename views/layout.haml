!!! 5
%html{html_attrs('en-en')}
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "lang", :content => "en"}
    %title '(find clojure code) - GetClojure
    %link{href:"/assets/css/style.css", rel:"stylesheet", type:"text/css"}
  %body
    %header
      %h1 GetClojure
      %p '(find clojure code)
    %section.search
      %form{method:"get", action:"/search"}
        %input{type:"text", name:"q", placeholder:"search clojure expression", value:@q}
        %input{type:"submit", value:"search"}
    = yield
    %footer
      %p
        Created by
        %a{href:"http://devinwalters.com"}Devin Walters
        and
        %a{href:"http://begriffs.com"}Joe Nelson
